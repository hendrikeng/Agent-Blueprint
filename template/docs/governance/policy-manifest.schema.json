{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/agent-blueprint/policy-manifest.schema.json",
  "title": "Policy Manifest",
  "type": "object",
  "required": [
    "version",
    "mandatorySafetyRules",
    "roleContracts",
    "validationPolicy",
    "docContract",
    "gitSafetyContract"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "mandatorySafetyRules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "statement",
          "requiredInRuntimeContext"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$"
          },
          "statement": {
            "type": "string",
            "minLength": 8
          },
          "requiredInRuntimeContext": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },
    "roleContracts": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": [
          "sandboxMode",
          "reasoningEffort",
          "intent"
        ],
        "properties": {
          "sandboxMode": {
            "type": "string",
            "enum": [
              "read-only",
              "full-access"
            ]
          },
          "reasoningEffort": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          },
          "intent": {
            "type": "string",
            "minLength": 8
          }
        },
        "additionalProperties": false
      }
    },
    "validationPolicy": {
      "type": "object",
      "required": [
        "fastIteration",
        "fullGate",
        "notes"
      ],
      "properties": {
        "fastIteration": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 4
          }
        },
        "fullGate": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 4
          }
        },
        "notes": {
          "type": "string",
          "minLength": 8
        }
      },
      "additionalProperties": false
    },
    "docContract": {
      "type": "object",
      "required": [
        "canonicalEntryPoints",
        "requiresSameChangeUpdateFor"
      ],
      "properties": {
        "canonicalEntryPoints": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 4
          }
        },
        "requiresSameChangeUpdateFor": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 4
          }
        }
      },
      "additionalProperties": false
    },
    "gitSafetyContract": {
      "type": "object",
      "required": [
        "forbiddenWithoutExplicitInstruction",
        "notes"
      ],
      "properties": {
        "forbiddenWithoutExplicitInstruction": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 2
          }
        },
        "notes": {
          "type": "string",
          "minLength": 8
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
