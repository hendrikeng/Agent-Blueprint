{
  "checks": [
    {
      "type": "nx_dep_constraints",
      "eslintConfigPath": "{{ESLINT_CONFIG_PATH}}",
      "requiredConstraints": [
        {
          "sourceTag": "{{SOURCE_TAG_1}}",
          "allow": [
            "{{ALLOWED_TARGET_TAG_1A}}",
            "{{ALLOWED_TARGET_TAG_1B}}"
          ]
        },
        {
          "sourceTag": "{{SOURCE_TAG_2}}",
          "allow": [
            "{{ALLOWED_TARGET_TAG_2A}}",
            "{{ALLOWED_TARGET_TAG_2B}}"
          ]
        }
      ]
    },
    {
      "type": "required_project_tags",
      "projects": [
        {
          "path": "{{PROJECT_JSON_PATH_1}}",
          "requiredTags": [
            "{{PROJECT_REQUIRED_TAG_1}}"
          ]
        },
        {
          "path": "{{PROJECT_JSON_PATH_2}}",
          "requiredTags": [
            "{{PROJECT_REQUIRED_TAG_2}}"
          ]
        }
      ]
    }
  ]
}
